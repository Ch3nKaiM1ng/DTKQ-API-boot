<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dtkq.api.dao.ArticleCommentDao">

    <resultMap type="com.dtkq.api.entity.ArticleComment" id="ArticleCommentMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="artId" column="art_id" jdbcType="INTEGER"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
        <result property="level" column="level" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="OTHER"/>
        <result property="ctime" column="ctime" jdbcType="TIMESTAMP"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ArticleCommentMap">
        select
          id, art_id, parent_id, level, user_id, content, ctime, status
        from DTKQ.article_comment
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ArticleCommentMap">
        select
          id, art_id, parent_id, level, user_id, content, ctime, status
        from DTKQ.article_comment
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ArticleCommentMap">
        select
          id, art_id, parent_id, level, user_id, content, ctime, status
        from DTKQ.article_comment
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="artId != null">
                and art_id = #{artId}
            </if>
            <if test="parentId != null">
                and parent_id = #{parentId}
            </if>
            <if test="level != null">
                and level = #{level}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="content != null">
                and content = #{content}
            </if>
            <if test="ctime != null">
                and ctime = #{ctime}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into DTKQ.article_comment(art_id, parent_id, level, user_id, content, ctime, status)
        values (#{artId}, #{parentId}, #{level}, #{userId}, #{content}, #{ctime}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update DTKQ.article_comment
        <set>
            <if test="artId != null">
                art_id = #{artId},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="level != null">
                level = #{level},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="ctime != null">
                ctime = #{ctime},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from DTKQ.article_comment where id = #{id}
    </delete>

</mapper>