<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dtkq.api.dao.CaseDao">

    <resultMap type="com.dtkq.api.entity.Case" id="CaseMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="doctorId" column="doctor_id" jdbcType="INTEGER"/>
        <result property="caseName" column="case_name" jdbcType="VARCHAR"/>
        <result property="caseTitle" column="case_title" jdbcType="VARCHAR"/>
        <result property="caseImg" column="case_img" jdbcType="VARCHAR"/>
        <result property="ctime" column="ctime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CaseMap">
        select
          id, user_id, doctor_id, case_name, case_title, case_img, ctime
        from DTKQ.case
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CaseMap">
        select
          id, user_id, doctor_id, case_name, case_title, case_img, ctime
        from DTKQ.case
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="CaseMap">
        select
          id, user_id, doctor_id, case_name, case_title, case_img, ctime
        from DTKQ.case
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="doctorId != null">
                and doctor_id = #{doctorId}
            </if>
            <if test="caseName != null and caseName != ''">
                and case_name = #{caseName}
            </if>
            <if test="caseTitle != null and caseTitle != ''">
                and case_title = #{caseTitle}
            </if>
            <if test="caseImg != null and caseImg != ''">
                and case_img = #{caseImg}
            </if>
            <if test="ctime != null">
                and ctime = #{ctime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into DTKQ.case(user_id, doctor_id, case_name, case_title, case_img, ctime)
        values (#{userId}, #{doctorId}, #{caseName}, #{caseTitle}, #{caseImg}, #{ctime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update DTKQ.case
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="doctorId != null">
                doctor_id = #{doctorId},
            </if>
            <if test="caseName != null and caseName != ''">
                case_name = #{caseName},
            </if>
            <if test="caseTitle != null and caseTitle != ''">
                case_title = #{caseTitle},
            </if>
            <if test="caseImg != null and caseImg != ''">
                case_img = #{caseImg},
            </if>
            <if test="ctime != null">
                ctime = #{ctime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from DTKQ.case where id = #{id}
    </delete>

</mapper>